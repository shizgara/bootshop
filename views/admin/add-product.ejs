<%- include("../layouts/header.ejs") %>;

<div class="container">
  <div class="row mb-4 mt-4">
    <div class="col">
      <form method="POST" action="/admin/add-product">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            aria-describedby="title"
            name="title"
            placeholder="Назва товару"
          />
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="number"
            min="0"
            class="form-control"
            id="price"
            aria-describedby="price"
            name="price"
            placeholder="Ціна"
          />
        </div>
        <div class="form-group">
          <label for="price">Sale</label>
          <input
            type="number"
            min="0"
            class="form-control"
            id="Sale"
            aria-describedby="Sale"
            name="Sale"
            placeholder="Знижка"
          />
        </div>
        <div class="form-group">
          <label for="image">imageUrl</label>
          <input
            type="text"
            class="form-control"
            id="imageUrl"
            aria-describedby="imageUrl"
            name="imageUrl"
            placeholder="Шлях до фото товару"
          />
        </div>
        <div class="form-group">
          <label for="price">quantity</label>
          <input
            type="number"
            min="0"
            class="form-control"
            id="quantity"
            aria-describedby="quantity"
            name="quantity"
            placeholder="Залишок товару"
          />
        </div>
        <div class="form-group">
          <label for="price">Color</label>
          <select name="color">
            <option value="Maroon">Black</option>

            <option value="Green">White</option>

            <option value="Yellow">Yellow</option>

            <option value="Blue">Blue</option>

            <option value="Red">Red</option>

            <option value="White">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="preview">shortDescription</label>
          <textarea
            class="form-control"
            id="shortDescription"
            name="shortDescription"
            placeholder="Короткий опис товару"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="course_program">fullDescription</label>
          <textarea
            class="form-control"
            id="fullDescription"
            name="fullDescription"
            placeholder="Повний опис товару"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="title">brand</label>
          <input
            type="text"
            class="form-control"
            id="brand"
            name="brand"
            placeholder="Торгова марка"
          />
        </div>
        <div class="form-group">
          <label for="title">model</label>
          <input
            type="text"
            class="form-control"
            id="model"
            name="model"
            placeholder="Модель"
          />
        </div>
        <div class="form-group">
          <label for="title">released</label>
          <input
            type="date"
            class="form-control"
            id="released"
            name="released"
            placeholder="Коли був випущений реліз даного продукту"
          />
        </div>
        <div class="form-group">
          <label for="title">dimensions</label>
          <input
            type="text"
            class="form-control"
            id="dimensions"
            name="dimensions"
            placeholder="Розміри(габарити)"
          />
        </div>
        <div class="form-group">
          <label for="title">displaySize</label>
          <input
            type="text"
            class="form-control"
            id="displaySize"
            name="displaySize"
            placeholder="Розмір дисплея"
          />
        </div>

        <div class="form-group">
          <label for="description">features</label>
          <textarea
            class="form-control"
            id="features"
            name="features"
            placeholder="Особливості"
          ></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>

<%- include("../layouts/footer.ejs") %>;
