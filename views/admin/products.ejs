<%- include('../layouts/header.ejs') %>

<div id="mainBody">
    <div class="container">
        <div class="row">
            <%- include('../admin/adminSidebar.ejs') %>
            <div class="span9">
                <div class="well well-small">
                   
                <h4>All Products </h4>
                <ul class="thumbnails">
                    <% if (products.length > 0) { %>
                    <% products.forEach( product => { %>
                    <li class="span3">
                        <div class="thumbnail">
                            <a href="/admin/admin_products_detail/<%= product.id %>"><img src="<%= product.imageUrl %>"
                                    alt="<%= product.title %>" /></a>
                            <div class="caption">
                                <h5><%= product.title %></h5>
                                <p>
                                    <%= product.shortDescription %>
                                </p>
                                <h4 style="text-align:center"><a class="btn" href="/admin/admin_products_detail/<%= product.id %>"> Detail <i
                                            class="icon-zoom-in"></i></a>  <a class="btn btn-primary"
                                        href="#"><%= product.price %> UAH</a></h4>
                            </div>
                            <div style="width:100%;padding-left: 25%;">
                                <button style=" cursor: pointer; margin-bottom: 15px;" class="btn"><a
                                        href='/admin/products_delete/<%= product.id%>'>Delete</a></button>
                                <button style=" cursor: pointer; margin-bottom: 15px; margin-left: 5px;" class="btn"><a
                                        href='/admin/edit_product/<%= product.id%>'>Edit</a></button>
                            </div>
                        </div>
                    </li>
                    <% }) %>
                    <% } else { %>
                    <ul>
                        <h2>No products found.</h2>
                    </ul>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>


<%- include('../layouts/footer.ejs') %>